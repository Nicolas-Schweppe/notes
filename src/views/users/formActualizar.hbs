<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header" style="text-align: center;">
                Actualizar Cuenta
            </div>
            <div class="card-body">
                <form action="/users/actualizar{{users.id}}?_method=PUT" method="POST">
                  
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" placeholder="Email"  value="{{email}}"required>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="Contraseña Anterior" required>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="newPassword" placeholder="nueva Contraseña" required>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="confirmar_newPassword" placeholder="Confirmar Nueva Contraseña" required>
                    </div>
                    <button class="btn btn-primary btn-block">
                        Actualizar
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>