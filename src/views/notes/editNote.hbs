<div class="col-md-4 mx-auto" style="opacity: 93%;">
    <div class="card">
        <div class="card-header">
            <h3>Editar Nota<img 
    src="/img/nota.png"
    class="card-img-top"
    style='width:40px; height:40px;'
   align="center"
   
    /></h3>
        </div>
          <div class="card-body">
            <form action="/notes/editNote/{{notaEditar._id}}?_method=PUT" method="POST">
            <input type="hidden" name="_method" value="PUT"/>
                <div class="form-group">
                    <input type="text" class="form-control" name="title"value="{{notaEditar.title}}">
                </div>
                <div class="form-group">
                    <textarea name="description" class="form-control" >{{notaEditar.description}}</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block " type="submit">Guardar</button>
                </div>
            </form>
          </div>    
    </div>
    
</div>