<div class="col-md-4 mx-auto" style="opacity: 93%;">
    <div class="card text-center">
        <div class="card-header">
            <h3>Nueva Nota <img 
    src="/img/nota.png"
    class="card-img-top"
    style='width:40px; height:40px;'
   align="center"
   
    /></h3>
        </div>
        <div class="card-body">
            <form action="/notes/newNote/{{idCategoria}}" method="POST">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" placeholder="title " required autofocus>
                </div>
                <div class="form-group">
                    <textarea name="description" placeholder="description" class="form-control" required></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
