<div class="row">
    {{#each categoria}}
    <div class="col-md-3">
        <div class="card">
            <div class="card-body" align="center">
                <img 
    src="/img/carpeta.png"
    class="card-img-top"
    style='width:40px; height:40px;'
   align="center"
   
    />
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{nombre}} <a href="/categoria/editCategoria/{{_id}}" ><i class="fa fa-pencil"></i></a>
                </h4>
                
                <form  action="/categoria/delete/{{_id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                     <button type="submit" class="btn btn-danger btn-block btn-sm" <a href="#" onclick="return confirm('Si borra la Categoria pèrdera las notas en ella. ¿Desea continuar?');">Borrar</a></button>
                </form>
            </div>
        </div>
    </div>
    
    {{/each}}
    
</div>
